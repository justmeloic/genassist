{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ], // Updated path to point to src
      "@/components/*": [
        "./src/components/*"
      ], // Added specific component path
      "@/hooks/*": [
        "./src/hooks/*"
      ], // Added specific hook path
      "@/lib/*": [
        "./src/lib/*"
      ], // Added specific lib path
      "@/styles/*": [
        "./src/styles/*"
      ], // Added specific styles path
      "@/app/*": [
        "./src/app/*"
      ], // Added specific app path
      "@/types/*": [
        "./src/types/*"
      ], // Added specific types path
      "@/providers/*": [
        "./src/providers/*"
      ] // Added specific providers path
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
